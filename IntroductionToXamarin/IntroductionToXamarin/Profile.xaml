<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntroductionToXamarin.Profile">
    <ContentPage.Content>
        <StackLayout>
            <Label Text=""
                   x:Name="ConcatInfo" />
            <Entry Placeholder="Voornaam"
                   x:Name="firstName"
                   Keyboard="Text" />
            <Entry Placeholder="Familienaam"
                   x:Name="lastName"
                   Keyboard="Text" />
            <Entry Placeholder="Leeftijd"
                   x:Name="age"
                   Keyboard="Numeric" />
            <Entry Placeholder="Hobbies"
                   x:Name="Hobbies"
                   Keyboard="Text" />
            <Button Text="Save Info"
                    Style="{StaticResource Save}"
                    Clicked="OnSaveInfo" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>